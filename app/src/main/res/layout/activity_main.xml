<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".ui.farmer.MainActivity">

    <!-- App Bar Layout with CollapsingToolbarLayout for modern design -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/primary_color"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <!-- Background gradient -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_header_bg"
                app:layout_collapseMode="pin" />

            <!-- Header content -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                app:layout_collapseMode="parallax">

                <!-- Profile section -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/farmerProfileImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_profile_placeholder"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="40dp" />

                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Mkulima"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/farmerProfileImage"
                    app:layout_constraintTop_toTopOf="@id/farmerProfileImage"
                    app:layout_constraintEnd_toStartOf="@id/notificationFrame"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Eneo"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:alpha="0.9"
                    app:layout_constraintStart_toStartOf="@id/txtUsername"
                    app:layout_constraintTop_toBottomOf="@id/txtUsername"
                    app:layout_constraintEnd_toEndOf="@id/txtUsername"
                    android:layout_marginTop="4dp" />

                <!-- Notification bell -->
                <FrameLayout
                    android:id="@+id/notificationFrame"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/farmerProfileImage">

                    <ImageView
                        android:id="@+id/notificationBell"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_notifications"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/notificationBadge"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end|top"
                        android:background="@drawable/notification_badge_bg"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </FrameLayout>

                <!-- Farm stats cards -->
                <LinearLayout
                    android:id="@+id/statsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@id/farmerProfileImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:alpha="0.95">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_farm"
                                app:tint="@color/primary_color" />

                            <TextView
                                android:id="@+id/txtFarmSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- Ekari"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ukubwa wa Shamba"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:alpha="0.95">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_chicken"
                                app:tint="@color/accent_color" />

                            <TextView
                                android:id="@+id/txtTotalChickens"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- Kuku"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jumla ya Kuku"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Collapsible toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:title="Kuku Assistant"
                app:titleTextColor="@android:color/white" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main content with NestedScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Quick Actions Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vitendo vya Haraka"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/llQuickActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Submit Report -->
                        <LinearLayout
                            android:id="@+id/btnSubmitReport"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="28dp"
                                app:cardBackgroundColor="@color/success_light"
                                app:cardElevation="4dp">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_report_add"
                                    app:tint="@color/success_color" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ripoti Magonjwa"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <!-- Track Symptoms -->
                        <LinearLayout
                            android:id="@+id/btnSymptomTracker"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="28dp"
                                app:cardBackgroundColor="@color/warning_light"
                                app:cardElevation="4dp">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_health_monitor"
                                    app:tint="@color/warning_color" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fuatilia Dalili"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <!-- Request Consultation -->
                        <LinearLayout
                            android:id="@+id/btnRequestConsultation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="28dp"
                                app:cardBackgroundColor="@color/info_light"
                                app:cardElevation="4dp">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_consultation"
                                    app:tint="@color/info_color" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shauri na Daktari"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- My Farm Management Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usimamizi wa Shamba"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- My Reports -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewMyReports"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="Ripoti Zangu"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textAllCaps="false"
                            app:backgroundTint="@color/surface_color"
                            app:icon="@drawable/ic_reports"
                            app:iconGravity="start"
                            app:iconPadding="16dp"
                            app:iconTint="@color/primary_color"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/divider_color"
                            app:strokeWidth="1dp"
                            android:layout_marginBottom="12dp"
                            android:gravity="start|center_vertical"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp" />

                        <!-- Disease Information -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDiseaseInfo"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="Maarifa ya Magonjwa"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textAllCaps="false"
                            app:backgroundTint="@color/surface_color"
                            app:icon="@drawable/ic_info"
                            app:iconGravity="start"
                            app:iconPadding="16dp"
                            app:iconTint="@color/accent_color"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/divider_color"
                            app:strokeWidth="1dp"
                            android:layout_marginBottom="12dp"
                            android:gravity="start|center_vertical"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp" />

                        <!-- Reminders -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnReminders"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="Vikumbusho"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textAllCaps="false"
                            app:backgroundTint="@color/surface_color"
                            app:icon="@drawable/ic_reminder"
                            app:iconGravity="start"
                            app:iconPadding="16dp"
                            app:iconTint="@color/warning_color"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/divider_color"
                            app:strokeWidth="1dp"
                            android:layout_marginBottom="12dp"
                            android:gravity="start|center_vertical"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp" />

                        <!-- Profile Management -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEditProfile"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="Hariri Wasifu"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textAllCaps="false"
                            app:backgroundTint="@color/surface_color"
                            app:icon="@drawable/ic_edit"
                            app:iconGravity="start"
                            app:iconPadding="16dp"
                            app:iconTint="@color/info_color"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/divider_color"
                            app:strokeWidth="1dp"
                            android:layout_marginBottom="12dp"
                            android:gravity="start|center_vertical"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp" />

                        <!-- Logout -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnLogout"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="Toka"
                            android:textColor="@color/error_color"
                            android:textSize="16sp"
                            android:textAllCaps="false"
                            app:backgroundTint="@color/surface_color"
                            app:icon="@drawable/ic_logout"
                            app:iconGravity="start"
                            app:iconPadding="16dp"
                            app:iconTint="@color/error_color"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/divider_color"
                            app:strokeWidth="1dp"
                            android:gravity="start|center_vertical"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Alerts Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/alertsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="90dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arifa za Hivi Karibuni"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/alertsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:elevation="16dp"
        app:menu="@menu/farmer_bottom_navigation"
        app:itemIconTint="@drawable/bottom_nav_item_color"
        app:itemTextColor="@drawable/bottom_nav_item_color"
        app:labelVisibilityMode="labeled" />

    <!-- Loading overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary_color" />
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>